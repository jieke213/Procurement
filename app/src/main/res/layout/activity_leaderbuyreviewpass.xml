<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_leaderbuyreview_pass"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@color/blue_1"
        android:elevation="4sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课组长/首席采购审核通过"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="课题组："
                android:textSize="14sp"
                android:gravity="right"
                />
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <Spinner
                    android:id="@+id/sp_teamName_leaderbuyreviewpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    >
                </Spinner>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="支出渠道："
                android:textSize="14sp"
                android:gravity="right"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                >
                <EditText
                    android:id="@+id/et_projFeeFrom_leaderbuyreviewpass"
                    android:layout_width="80sp"
                    android:layout_height="30sp"
                    android:background="@drawable/edittext_style"
                    android:hint="支出渠道"
                    android:textSize="14sp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/btn_ok_leaderbuyreviewpass"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:text="通过审核"
            android:layout_gravity="center"
            android:background="@drawable/btn_review_ok_selector"
            />
    </LinearLayout>

</LinearLayout>