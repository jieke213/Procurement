<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_orderitem_num"
        android:layout_width="22sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="No." />

    <TextView
        android:id="@+id/tv_supplierPartId"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="货号" />

    <TextView
        android:id="@+id/tv_itemName"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="名称" />

    <TextView
        android:id="@+id/tv_brandName"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="品牌" />

    <TextView
        android:id="@+id/tv_sku"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="单位" />

    <TextView
        android:id="@+id/tv_specifications"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="规格" />

    <TextView
        android:id="@+id/tv_cycle"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="货期" />

    <TextView
        android:id="@+id/tv_unitPiceStr"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="单价" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="数量" />

    <TextView
        android:id="@+id/tv_relAmountStr"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="合计" />

    <TextView
        android:id="@+id/tv_featureMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="备注" />
</LinearLayout>