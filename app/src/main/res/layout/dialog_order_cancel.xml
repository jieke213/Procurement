<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="订单取消的原因"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="操作不可取消"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/et_ordercancel_cause"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="取消的原因"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_style"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >
            <Button
                android:id="@+id/btn_ordercancel_cancel"
                android:layout_width="50sp"
                android:layout_height="30sp"
                android:text="否"
                android:background="@drawable/btn_review_cancel_selector"
                />
            <Button
                android:id="@+id/btn_ordercancel_ok"
                android:layout_width="50sp"
                android:layout_height="30sp"
                android:text="是"
                android:background="@drawable/btn_review_ok_selector"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>