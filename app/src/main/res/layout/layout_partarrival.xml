<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mygrey2"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkbox_partarrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        />
    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_partarrival"
                android:layout_width="95sp"
                android:layout_height="95sp"
                android:layout_gravity="center"
                android:src="@mipmap/image_goods" />

            <LinearLayout
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品名: "
                        android:textSize="@dimen/text_size_goods" />

                    <TextView
                        android:id="@+id/tv_goodsName_partarrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_goods" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="货号: "
                        android:textSize="@dimen/text_size_goods" />

                    <TextView
                        android:id="@+id/tv_supplierPartId_partarrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_goods" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="品牌: "
                        android:textSize="@dimen/text_size_goods" />

                    <TextView
                        android:id="@+id/tv_brandName_partarrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_goods" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单位: "
                        android:textSize="@dimen/text_size_goods" />

                    <TextView
                        android:id="@+id/tv_sku_partarrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_goods" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规格: "
                        android:textSize="@dimen/text_size_goods" />

                    <TextView
                        android:id="@+id/tv_specifications_partarrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_goods" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="货期: "
                        android:textSize="@dimen/text_size_goods" />

                    <TextView
                        android:id="@+id/tv_cycle_partarrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_goods" />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_unitPriceStr_partarrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_goods"
                    />
                <TextView
                    android:id="@+id/tv_quantity_partarrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_goods"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="3dp"
            android:gravity="bottom"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到货数量："
                />
            <LinearLayout
                android:id="@+id/layout_num_partarrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/layout_num_arrivalquantity_selector"
                >
                <Button
                    android:id="@+id/btn_remove_partarrival"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/btn_remove_arrivalquantity_selector"
                    android:focusable="false"
                    />
                <TextView
                    android:id="@+id/tv_num_partarrival"
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_goods"
                    android:background="@drawable/edittext_style_arrivalquantity"
                    android:text="0"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:id="@+id/btn_add_partarrival"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/btn_add_arrivalquantity_selector"
                    android:focusable="false"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>