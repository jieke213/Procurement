<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_home"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@color/red"
        android:elevation="4sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_scan"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/home_scan"
                    android:tint="@color/white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫一扫"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edittext_style3"
                android:layout_marginRight="10dp"
                >
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/seach_hint"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    />
                <EditText
                    android:id="@+id/et_search_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入您要查找的商品"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_circle_home"
                    android:layout_width="match_parent"
                    android:layout_height="250sp"
                    android:layout_marginTop="5dp">
                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/circle_indicator_home"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:id="@+id/image_static1"
                    android:layout_width="0sp"
                    android:layout_height="150sp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@mipmap/pic_static1" />

                <ImageView
                    android:id="@+id/image_static2"
                    android:layout_width="0sp"
                    android:layout_height="150sp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:src="@mipmap/pic_static2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:id="@+id/image_static3"
                    android:layout_width="0sp"
                    android:layout_height="150sp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@mipmap/pic_static3" />

                <ImageView
                    android:id="@+id/image_static4"
                    android:layout_width="0sp"
                    android:layout_height="150sp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:src="@mipmap/pic_static4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pic_left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="习近平致信祝贺中国农业科学院建院60周年" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pic_center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="中国农科院举办建院60周年成就展" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pic_right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="60载科技兴农铸就大地丰碑
" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>